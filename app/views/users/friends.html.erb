<h1>Friends</h1>

<h2>Search Friends</h2>
<%= form_tag search_friends_path, remote: true, method: :get do %>
  <div class="form=group row" >
    <div class="col-sm-9">
      <%= text_field_tag :friend, params[:friend],  placeholder: "Search Friends",
      autofocus: true, class: "form-control form-control-lg" %>
    </div>
    <div class="col-sm-3">
      <%= button_tag type: :submit, class: "btn btn-success" do %>
      <%= "Search" %>
      <% end %>
      </div>
    <% end %>
    <div id="results" >

    </div>
<%= render 'users/friends' %>
